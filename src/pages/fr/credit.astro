---
import Logo from '../../components/AnimatedLogo.astro'
import Layout from '../../layouts/Layout.astro';


---

<Layout>
    <div class="content">
        <div class="logo">
            <Logo fade/>
        </div>
        <div class="text">
            <p>Fait avec ðŸ’œ par</p>
            <p>Fabricated World</p>
        </div>
    </div>
</Layout>

<style>
    .content {
        margin-top: auto;
        bottom: 0;
        position: absolute;

        display: flex;
        flex-direction: row;

        max-height: 100%;
        height: auto;
        width: 100%;
        overflow: hidden;

        justify-content: center;
        align-items: center;

        padding: 3em;
    }

    .text {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 70%;
        height: 100%;
    }

    .logo {
        max-height: 70vh;
        width: 40%;
    }

    .text p {
        font-family: "JetBrains Mono", monospace;
        font-weight: 700;
        font-size: 1em;
        margin-bottom: 0;
        margin-top: 0;
    }

    @media (min-width: 585px) {
        .text p {
            font-size: 2em;
        }
    }

    @media (min-width: 825px) {
        .text p {
            font-size: 3em;
        }
    }

    @media (min-width: 1100px) {
        .text p {
            font-size: 4em;
        }
    }

</style>